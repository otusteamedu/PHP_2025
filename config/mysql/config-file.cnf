[mysqld]
innodb_buffer_pool_size=4G
tmp_table_size = 1G
max_heap_table_size = 1G
query_cache_size = 512M
slow-query-log      = 1
slow-query-log-file = /var/log/mysql/mysql-slow.log
long_query_time     = 1
log-queries-not-using-indexes = 1
interactive_timeout = 180
wait_timeout = 180
table_open_cache = 1000000