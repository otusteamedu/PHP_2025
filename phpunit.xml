<?xml version="1.0" encoding="UTF-8"?>

<!-- https://docs.phpunit.de/en/12.3/configuration.html#the-phpunit-element -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         bootstrap="tests/bootstrap.php"
>
    <!-- https://docs.phpunit.de/en/12.3/configuration.html#appendixes-configuration-php -->
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
        <server name="SYMFONY_PHPUNIT_REMOVE" value="" />
        <server name="SYMFONY_PHPUNIT_VERSION" value="9.5" />
    </php>

    <!-- https://docs.phpunit.de/en/12.3/configuration.html#the-testsuites-element -->
    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <!-- https://docs.phpunit.de/en/12.3/configuration.html#the-coverage-element -->
    <coverage includeUncoveredFiles="true"></coverage>

    <!-- https://docs.phpunit.de/en/12.3/configuration.html#the-coverage-element -->
    <extensions>
        <bootstrap class="Symfony\Bridge\PhpUnit\SymfonyTestsListener" />
    </extensions>
</phpunit>
