{
    "name": "andrey-yurchuk/php-2025",
    "description": "PHP application for processing deferred bank statement requests",
    "type": "project",
    "authors": [
        {
            "name": "Andrey Yurchuk",
            "email": "a.yurchuk1430@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "php-amqplib/php-amqplib": "^3.0",
        "monolog/monolog": "^3.9",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "ext-sockets": "*",
        "ext-zip": "*",
        "ext-amqp": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "analyse:strict": "phpstan analyse --level=8",
        "check-style": "phpcs --standard=phpcs.xml",
        "fix-style": "phpcbf --standard=phpcs.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
