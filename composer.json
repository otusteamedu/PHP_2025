{
  "name": "otus/bookstore-console",
  "description": "Console app to search books in Elasticsearch",
  "type": "project",
  "require": {
    "php": "^8.2",
    "elasticsearch/elasticsearch": "^8.13",
    "psr/container": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
