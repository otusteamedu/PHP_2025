{
    "name": "andrey-yurchuk/php-2025",
    "description": "REST API with Queues and Swagger documentation",
    "type": "project",
    "authors": [
      {
        "name": "Andrey Yurchuk",
        "email": "a.yurchuk1430@gmail.com"
      }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "php-amqplib/php-amqplib": "^3.0",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "ext-zip": "*",
        "ext-amqp": "*",
        "ext-yaml": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "check-style": "phpcs",
        "fix-style": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}